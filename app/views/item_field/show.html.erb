<%- model_class = ItemField -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:input_title) %>:</strong></dt>
  <dd><%= @item_field.input_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:input_type) %>:</strong></dt>
  <dd><%= @item_field.input_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:required) %>:</strong></dt>
  <dd><%= @item_field.required %></dd>
  <dt><strong><%= model_class.human_attribute_name(:input_values) %>:</strong></dt>
  <dd><%= @item_field.input_values %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              item_fields_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_field_path(@item_field), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_field_path(@item_field),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
