<%= form_for @item_field, :html => { :class => "form-horizontal item_field" } do |f| %>

  <% if @item_field.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@item_field.errors.count, "error") %> prohibited this item_field from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @item_field.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :input_title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :input_title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:input_title) %>
  </div>
  <div class="form-group">
    <%= f.label :input_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :input_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:input_type) %>
  </div>
  <div class="form-group">
    <%= f.label :required, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :required, :class => 'form-control' %>
    </div>
    <%=f.error_span(:required) %>
  </div>
  <div class="form-group">
    <%= f.label :input_values, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :input_values, :class => 'form-control' %>
    </div>
    <%=f.error_span(:input_values) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                item_fields_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
